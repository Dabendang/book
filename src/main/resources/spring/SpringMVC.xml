	<!-- 静态资源访问 -->
	<!--<mvc:resources location="/images/" mapping="/imgages/**" />
	<mvc:resources location="/js/" mapping="/js/**" />
	<mvc:resources location="/css/" mapping="/css/**" />-->

	<!--拦截器配置-->
	<mvc:interceptors>
		<mvc:interceptor>
			<mvc:mapping path="/**"/>
			<mvc:exclude-mapping path="/"/>
			<mvc:exclude-mapping path="/admin"/>
			<mvc:exclude-mapping path="/portal/user/login"/>
			<mvc:exclude-mapping path="/portal/user/register"/>
			<mvc:exclude-mapping path="/backend/admin/login"/>
			<mvc:exclude-mapping path="/portal/user/checkUsername"/>
			<bean class="edu.fjut.bookshop.web.interceptor.LoginInterceptor"></bean>
		</mvc:interceptor>
	</mvc:interceptors>

